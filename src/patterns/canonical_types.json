{
    "schema_version": "1.0.0",
    "description": "Definition of canonical architectural types for the Standard Model of Code.",
    "layers": {
        "domain": {
            "description": "The heart of the software, containing business logic and rules.",
            "types": [
                {
                    "id": "Entity",
                    "description": "Object with a distinct identity that runs through time and different representations.",
                    "aliases": [
                        "Model",
                        "Aggregate",
                        "AggregateRoot"
                    ],
                    "rpbl": {
                        "responsibility": 8,
                        "purity": 6,
                        "boundary": 2,
                        "lifecycle": 8
                    }
                },
                {
                    "id": "ValueObject",
                    "description": "Object that matters only as the combination of its attributes.",
                    "aliases": [
                        "VO",
                        "Structure"
                    ],
                    "rpbl": {
                        "responsibility": 3,
                        "purity": 9,
                        "boundary": 2,
                        "lifecycle": 1
                    }
                },
                {
                    "id": "DomainEvent",
                    "description": "Something that happened in the domain that domain experts care about.",
                    "aliases": [
                        "Event",
                        "Message"
                    ],
                    "rpbl": {
                        "responsibility": 3,
                        "purity": 9,
                        "boundary": 6,
                        "lifecycle": 1
                    }
                },
                {
                    "id": "DomainService",
                    "description": "Operation that stands alone in the model, with no natural object to own it.",
                    "aliases": [
                        "Service",
                        "Policy"
                    ],
                    "rpbl": {
                        "responsibility": 7,
                        "purity": 5,
                        "boundary": 5,
                        "lifecycle": 6
                    }
                },
                {
                    "id": "Specification",
                    "description": "Explicit predicate-like business rule.",
                    "aliases": [
                        "Rule",
                        "Predicate"
                    ],
                    "rpbl": {
                        "responsibility": 4,
                        "purity": 8,
                        "boundary": 2,
                        "lifecycle": 4
                    }
                },
                {
                    "id": "Repository",
                    "description": "Interface for retrieving domain objects (abstraction only).",
                    "rpbl": {
                        "responsibility": 5,
                        "purity": 9,
                        "boundary": 6,
                        "lifecycle": 8
                    }
                }
            ]
        },
        "application": {
            "description": "Defines the jobs the software is supposed to do and directs the expressive domain objects to work out problems.",
            "types": [
                {
                    "id": "UseCase",
                    "description": "Orchestrates a specific business use case.",
                    "aliases": [
                        "Interactor",
                        "Interaction",
                        "ApplicationService"
                    ],
                    "rpbl": {
                        "responsibility": 7,
                        "purity": 4,
                        "boundary": 5,
                        "lifecycle": 5
                    }
                },
                {
                    "id": "Command",
                    "description": "Request to perform an action (C in CQRS).",
                    "rpbl": {
                        "responsibility": 3,
                        "purity": 9,
                        "boundary": 6,
                        "lifecycle": 1
                    }
                },
                {
                    "id": "Query",
                    "description": "Request for information (Q in CQRS).",
                    "rpbl": {
                        "responsibility": 3,
                        "purity": 9,
                        "boundary": 6,
                        "lifecycle": 1
                    }
                },
                {
                    "id": "CommandHandler",
                    "description": "Logic that processes a command.",
                    "rpbl": {
                        "responsibility": 6,
                        "purity": 4,
                        "boundary": 5,
                        "lifecycle": 6
                    }
                },
                {
                    "id": "QueryHandler",
                    "description": "Logic that processes a query.",
                    "rpbl": {
                        "responsibility": 6,
                        "purity": 7,
                        "boundary": 5,
                        "lifecycle": 6
                    }
                },
                {
                    "id": "job",
                    "description": "Background or scheduled task.",
                    "aliases": [
                        "Task",
                        "Cron"
                    ],
                    "rpbl": {
                        "responsibility": 6,
                        "purity": 2,
                        "boundary": 4,
                        "lifecycle": 5
                    }
                }
            ]
        },
        "infrastructure": {
            "description": "Provides generic technical capabilities that support the higher layers.",
            "types": [
                {
                    "id": "RepositoryImpl",
                    "description": "Concrete repository implementation (I/O boundary)",
                    "rpbl": {
                        "responsibility": 8,
                        "purity": 3,
                        "boundary": 6,
                        "lifecycle": 7
                    }
                },
                {
                    "id": "Gateway",
                    "description": "Facade for external service integration",
                    "rpbl": {
                        "responsibility": 6,
                        "purity": 2,
                        "boundary": 9,
                        "lifecycle": 5
                    }
                },
                {
                    "id": "Client",
                    "description": "HTTP/API client for external services",
                    "rpbl": {
                        "responsibility": 5,
                        "purity": 2,
                        "boundary": 8,
                        "lifecycle": 4
                    }
                },
                {
                    "id": "Adapter",
                    "description": "Converts between domain and external formats",
                    "rpbl": {
                        "responsibility": 5,
                        "purity": 6,
                        "boundary": 7,
                        "lifecycle": 4
                    }
                },
                {
                    "id": "Provider",
                    "description": "Supplies external resources or configuration",
                    "rpbl": {
                        "responsibility": 4,
                        "purity": 4,
                        "boundary": 6,
                        "lifecycle": 5
                    }
                }
            ]
        },
        "presentation": {
            "description": "Controllers, endpoints, views - user interface layer",
            "types": [
                {
                    "id": "Controller",
                    "description": "Handles user input and coordinates application flow",
                    "rpbl": {
                        "responsibility": 6,
                        "purity": 2,
                        "boundary": 9,
                        "lifecycle": 4
                    }
                },
                {
                    "id": "Endpoint",
                    "description": "API endpoint handling HTTP requests",
                    "aliases": [
                        "Handler"
                    ],
                    "rpbl": {
                        "responsibility": 5,
                        "purity": 2,
                        "boundary": 9,
                        "lifecycle": 3
                    }
                },
                {
                    "id": "DTO",
                    "description": "Data transfer object / schema (no business behavior)",
                    "aliases": [
                        "Schema",
                        "Request",
                        "Response"
                    ],
                    "rpbl": {
                        "responsibility": 4,
                        "purity": 8,
                        "boundary": 8,
                        "lifecycle": 3
                    }
                },
                {
                    "id": "View",
                    "description": "Template or UI component rendering",
                    "aliases": [
                        "Component"
                    ],
                    "rpbl": {
                        "responsibility": 4,
                        "purity": 3,
                        "boundary": 8,
                        "lifecycle": 3
                    }
                },
                {
                    "id": "Presenter",
                    "description": "Formats data for view presentation",
                    "rpbl": {
                        "responsibility": 4,
                        "purity": 6,
                        "boundary": 7,
                        "lifecycle": 3
                    }
                }
            ]
        },
        "cross_cutting": {
            "description": "Patterns that span multiple layers",
            "types": [
                {
                    "id": "Factory",
                    "description": "Encapsulates complex object creation logic",
                    "rpbl": {
                        "responsibility": 5,
                        "purity": 6,
                        "boundary": 4,
                        "lifecycle": 3
                    }
                },
                {
                    "id": "Builder",
                    "description": "Step-by-step object construction",
                    "rpbl": {
                        "responsibility": 4,
                        "purity": 7,
                        "boundary": 3,
                        "lifecycle": 3
                    }
                },
                {
                    "id": "Mapper",
                    "description": "Converts between different object representations",
                    "aliases": [
                        "Converter"
                    ],
                    "rpbl": {
                        "responsibility": 4,
                        "purity": 8,
                        "boundary": 4,
                        "lifecycle": 2
                    }
                },
                {
                    "id": "Validator",
                    "description": "Input validation and business rule checks",
                    "rpbl": {
                        "responsibility": 4,
                        "purity": 8,
                        "boundary": 5,
                        "lifecycle": 2
                    }
                },
                {
                    "id": "Configuration",
                    "description": "Application configuration and settings",
                    "aliases": [
                        "Config",
                        "Settings"
                    ],
                    "rpbl": {
                        "responsibility": 3,
                        "purity": 7,
                        "boundary": 5,
                        "lifecycle": 8
                    }
                },
                {
                    "id": "Exception",
                    "description": "Custom error types and error handling",
                    "aliases": [
                        "Error"
                    ],
                    "rpbl": {
                        "responsibility": 2,
                        "purity": 9,
                        "boundary": 3,
                        "lifecycle": 1
                    }
                },
                {
                    "id": "Utility",
                    "description": "Helper functions and shared utilities",
                    "aliases": [
                        "Helper",
                        "Utils"
                    ],
                    "rpbl": {
                        "responsibility": 3,
                        "purity": 8,
                        "boundary": 2,
                        "lifecycle": 2
                    }
                },
                {
                    "id": "Test",
                    "description": "Test cases and test utilities",
                    "aliases": [
                        "Spec"
                    ],
                    "rpbl": {
                        "responsibility": 3,
                        "purity": 5,
                        "boundary": 2,
                        "lifecycle": 1
                    }
                },
                {
                    "id": "Internal",
                    "description": "Internal implementation detail, private helper, or unexported component",
                    "aliases": [
                        "Private",
                        "Helper"
                    ],
                    "rpbl": {
                        "responsibility": 3,
                        "purity": 6,
                        "boundary": 1,
                        "lifecycle": 2
                    }
                },
                {
                    "id": "Module",
                    "description": "File-level or package-level organizational container",
                    "aliases": [
                        "Package",
                        "Namespace"
                    ],
                    "rpbl": {
                        "responsibility": 2,
                        "purity": 9,
                        "boundary": 4,
                        "lifecycle": 8
                    }
                },
                {
                    "id": "Constructor",
                    "description": "Object initialization and setup logic",
                    "aliases": [
                        "Init",
                        "Setup"
                    ],
                    "rpbl": {
                        "responsibility": 4,
                        "purity": 4,
                        "boundary": 3,
                        "lifecycle": 9
                    }
                },
                {
                    "id": "EntryPoint",
                    "description": "Application entry point, main function, or startup hook",
                    "aliases": [
                        "Main",
                        "Bootstrap"
                    ],
                    "rpbl": {
                        "responsibility": 8,
                        "purity": 2,
                        "boundary": 9,
                        "lifecycle": 9
                    }
                },
                {
                    "id": "Transformer",
                    "description": "Data transformation, serialization, or format conversion",
                    "aliases": [
                        "Serializer",
                        "Deserializer"
                    ],
                    "rpbl": {
                        "responsibility": 4,
                        "purity": 7,
                        "boundary": 5,
                        "lifecycle": 2
                    }
                },
                {
                    "id": "Fixture",
                    "description": "Test fixture, mock, or test data setup",
                    "aliases": [
                        "Mock",
                        "Stub",
                        "TestData"
                    ],
                    "rpbl": {
                        "responsibility": 3,
                        "purity": 4,
                        "boundary": 2,
                        "lifecycle": 1
                    }
                }
            ]
        }
    },
    "scoring": {
        "per_layer": true,
        "flat_aggregate": true,
        "layer_weights": {
            "domain": 1.5,
            "application": 1.2,
            "infrastructure": 1.0,
            "presentation": 1.0,
            "cross_cutting": 0.8
        }
    },
    "fallback": {
        "id": "Unknown",
        "description": "Component that could not be classified with sufficient confidence"
    }
}