{
  "name": "@lech/chrome-mcp",
  "version": "1.0.0",
  "description": "Chrome MCP Server - Browser Automation via Model Context Protocol",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "mcp",
    "chrome",
    "browser",
    "automation",
    "puppeteer",
    "devtools"
  ],
  "author": "Leonardo Lech",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "chrome-remote-interface": "^0.33.0",
    "marked": "^17.0.1",
    "puppeteer": "^22.6.5",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "mcp": {
    "displayName": "Chrome Browser Automation",
    "description": "Automate Chrome browser tasks including navigation, scraping, and interactions",
    "capabilities": [
      "browsing",
      "screenshot",
      "dom-manipulation",
      "javascript-execution",
      "network-monitoring"
    ]
  }
}
